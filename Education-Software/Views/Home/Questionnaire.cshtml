@model IEnumerable<QuestionnaireModel>

@{
    ViewData["Title"] = "Questionnaire";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/Questionnaire.css" />
    <link rel="stylesheet" href="~/css/MenuStyle.css" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

}

<!--Side Menu-->
<body>
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                    <!--<img src="logo.png" alt="">-->
                </span>
                <div class="text logo-text">
                    <span class="name">Job orientation</span>
                    <span class="profession"><i>Computer Science</i> </span>
                </div>
            </div>
            <i class='bx bx-chevron-right toggle'></i>
        </header>
        <div class="menu-bar">
            <div class="menu">

                <ul class="menu-links">
                    <li class="nav-link">
                        <a class="homebtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Homepage">
                            <i class='bx bx-home-alt icon'></i>
                            <span class="text nav-text">Homepage</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Subjects">
                            <i class='bx bx-list-ul icon'></i>
                            <span class="text nav-text">Subjects</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Progress">
                            <i class='bx bx-line-chart icon'></i>
                            <span class="text nav-text">Progress</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Grades">
                            <i class='bx bx-history icon'></i>
                            <span class="text nav-text">Past Grades</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Questionnaire">
                            <i class='bx bx-pencil icon'></i>
                            <span class="text nav-text">Career Test</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Recommendations">
                            <i class='bx bx-check-circle icon'></i>
                            <span class="text nav-text">Career Recommendations</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a class="profbtn" asp-controller="Home" asp-route-username="@ViewBag.username" asp-action="Profile">
                            <i class='bx bx-male icon'></i>
                            <span class="text nav-text">Profile</span>
                        </a>
                    </li>


                </ul>
            </div>
            <div class="bottom-content">
                <li class="">
                    <a class="logoutbtn" asp-controller="Home" asp-action="Login">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text">Logout</span>
                    </a>
                </li>
                

            </div>
        </div>
    </nav>

                <section class="home">

                    <div class="header">
                        <div class="text title">General Questionnaire
                        <div class="help-container">
                            <button href="#" class="help-button" data-bs-toggle="modal" data-bs-target="#mymodal"><i class='bx bx-help-circle'></i></button>
                        </div>
                        </div>
                        <div class="right-corner">
                            <img src="~/Resources/icons8-male-user-24 (1).png"></img>
                            <div class="smalltext username ">@ViewBag.username </div>
                        </div>
                    </div>
                    <div class="main">
                         <h4>This is a questionnaire that will help us understand your insterests and preferences about the world of Computer Science</h4>
                         <h4>You can fill this form miltiple times, but your career recommendations are <i>exclusively </i>based on your last submit.</h4>
                         <div class="form-container">

                @if (@Model != default)
                {


                    <form asp-controller="Home" asp-action="SubmitQuestionnaire" method="post" class="test-btn">
                        <input type="hidden" name="username" value="@ViewBag.username" />
                        <h2>Answer the questions below</h2>
                        <input type="hidden" id="q" name="q_id1" value="@Model.ToList()[0].q_id" />
                        <div class="question">
                            <div class="q">@Model.ToList()[0].question</div>
                            <div class="radios">
                                @foreach (var answer in Model.ToList()[0].possible_answers.Split("•"))
                                {

                                    string[] arr = @Model.ToList()[0].possible_answers.Split("•");
                                    int ind = (int)Array.IndexOf(arr, answer) + (int)1;
                                    string index = ind.ToString();
                                    <input type="radio" id="mc" name="answer1" value=@index />
                                    <label for="mc">@answer</label>

                                    <br />
                                }
                            </div>
                        </div>


                        <input type="hidden" id="q" name="q_id2" value="@Model.ToList()[1].q_id" />
                        <div class="question">
                            <div class="q">@Model.ToList()[1].question</div>
                            <div class="radios">
                                @foreach (var answer in Model.ToList()[1].possible_answers.Split("•"))
                                {

                                    string[] arr = @Model.ToList()[1].possible_answers.Split("•");
                                    int ind = (int)Array.IndexOf(arr, answer) + (int)1;
                                    string index = ind.ToString();
                                    <input type="radio" id="mc" name="answer2" value=@index />
                                    <label for="mc">@answer</label>

                                    <br />
                                }
                            </div>
                        </div>


                        <input type="hidden" id="q" name="q_id3" value="@Model.ToList()[2].q_id" />
                        <div class="question">
                            <div class="q">@Model.ToList()[2].question</div>
                            <div class="radios">
                                @foreach (var answer in Model.ToList()[2].possible_answers.Split("•"))
                                {

                                    string[] arr = @Model.ToList()[2].possible_answers.Split("•");
                                    int ind = (int)Array.IndexOf(arr, answer) + (int)1;
                                    string index = ind.ToString();
                                    <input type="radio" id="mc" name="answer3" value=@index />
                                    <label for="mc">@answer</label>

                                    <br />
                                }
                            </div>
                        </div>


                        <button id="btnDone" type="submit" class="done buttons icon">
                            Sumbit
                        </button>
                    </form>
                }
                else
                {
                    <form asp-controller="Home" asp-action="Grades" method="post">
                        <input type="hidden" name="username" value="@ViewBag.username" />
                        <div>
                            <h5>
                                <i>
                                    In order to take the general questionnaire you need first to have submited your grades to all the subjects.
                                </i>
                            </h5>
                        </div>
                        <button type="submit" class="done" id="submit">Add your grades</button>
                    </form>
                }


                    </div>
                    </div>

                    <div class="modal" tabindex="-1" role="dialog" id="mymodal">
                        <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title"><i class='bx bx-help-circle'></i>Help</h3>

                    </div>
                    <div class="modal-body">
                        <h5>You will know complete the General Questionnaire</h5>
                        <h6><b>To complete the questionnaire:</b> </h6>
                        <h6>•Select your answer</h6>
                        <h6>•Repeat for each question</h6>
                        <h6>•Click on the <span class="colored">'Submit'</span> button</h6>
                       
                    </div>

                </div>
            </div>
        </div>
                    

                </section>

    <script>
        const body = document.querySelector('body'),
            sidebar = body.querySelector('nav'),
            toggle = body.querySelector(".toggle"),
            searchBtn = body.querySelector(".search-box"),
            modeSwitch = body.querySelector(".toggle-switch"),
            modeText = body.querySelector(".mode-text"),
            buttonplay = body.querySelector(".play"),
            buttonpause = body.querySelector(".pause");

        toggle.addEventListener("click", () => {
            sidebar.classList.toggle("close");
        })
        searchBtn.addEventListener("click", () => {
            sidebar.classList.remove("close");
        })
        modeSwitch.addEventListener("click", () => {
            body.classList.toggle("dark");

            if (body.classList.contains("dark")) {
                modeText.innerText = "Light mode";
            } else {
                modeText.innerText = "Dark mode";

            }
        });
    </script>

    </body>





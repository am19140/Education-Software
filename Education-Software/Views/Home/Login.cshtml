@model Education_Software.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

    <link rel="stylesheet" href="~/css/loginStyle.css" />
}
    <div class="page">
        <div class="sign-in-form">
            <form asp-controller="Home" asp-action="Login" method="post" class="form">
                <h1>Sign In</h1>
                <div class="inputs">
                    <input type="text" placeholder="Username" class="input" asp-for="username" />
                </div>
                <div class="inputs">
                    <input type="password" placeholder="Password" class="input" asp-for="password" />
                </div>
                <div class="inputs">
                    <input type="submit" class="submit-btn" value="Sign In" class="input" />

                </div>
            </form>
            <div class="register">

            <h4>Don't have an account yet?</h4>
            <a class="signin" asp-controller="Home" asp-action="Registration">
                
                    <h5>Create an account</h5>
                
            </a>
            
        </div>
        <div class="help-container">
            <button href="#" class="help-button" data-bs-toggle="modal" data-bs-target="#mymodal"><i class='bx bx-help-circle'></i></button>
        </div>
        <div class="modal" tabindex="-1" role="dialog" id="mymodal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title"><i class='bx bx-help-circle'></i> Help</h3>
                        <!--<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>-->
                    </div>
                    <div class="modal-body">
                        <h5>This is the Sign In page</h5>
                        <h6><b>To Sign In the app:</b></h6>
                        <h6>•Fill in your <span class="colored">username</span>  and <span class="colored">password</span> </h6>
                        <h6>•Click on the <span class="colored">'Sign In'</span>  button</h6>
                        <h6><b>If you don't have an account yet:</b></h6>
                        <h6>Click on the <span class="colored">'Create an account' </span>button</h6>

                    </div>

                </div>
            </div>
        </div>
        </div>
        <div class="shape-container">
        <img src="@Url.Content("~/Resources/login-image.png")" class="image" />

        <h2 class="text">We help you find your <i>dream career</i></h2>
        </div>
    </div>

@if (Model != null && !Model.isLoginConfirmed)
{
    <script type="text/javascript" src="~/js/LoginScript.js">
    </script>
}
